@using Vekalat.Application.Enums
@using static Vekalat.Application.Features.EquipmentReservationFeature;
@model EquipmentReservationForViewDto




<div class="panel-body my-3">
    <div class="row">

        <div class="form-group col-md-12 col-12 mb-3">
            <label asp-for="Title" class="form-label"> </label>
            <input class="form-control" asp-for="Title" disabled type="text">
        </div>


        <div class="form-group col-md-12 col-12 mb-3">
            <label asp-for="User" class="form-label"> </label>
            <div class="input-group">
                <input type="text" asp-for="User" class="form-control" disabled>
            </div>
        </div>

        <div class="form-group col-md-12 col-12 mb-3">
            <label asp-for="Equipment" class="form-label"> </label>
            <div class="input-group">
                <input type="text" asp-for="Equipment" class="form-control" disabled>
            </div>
        </div>

        <div class="form-group col-md-12 col-12 mb-3">
            <label asp-for="ReservedDate" class="form-label"> </label>
            <div class="input-group">
                <input type="text" asp-for="ReservedDate" class="form-control" disabled>
            </div>
        </div>

        <div class="form-group col-md-12 col-12 mb-3">
            <label asp-for="ReturnDate" class="form-label"> </label>
            <div class="input-group">
                <input type="text" asp-for="ReturnDate" class="form-control" disabled>
            </div>
        </div>


        <div class="form-group col-md-12 col-12 ">
            <label asp-for="Description" class="form-label"> </label>
            <textarea asp-for="Description" class="form-control " disabled></textarea>
        </div>
    </div>

</div>
<button type="submit" onclick="Delete(@Model.Id)" class="btn btn-danger submitBtn">Delete</button>
<div class="clearfix"></div>

