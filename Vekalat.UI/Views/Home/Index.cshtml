<style>
    a {
        text-decoration: none;
        color: #fff;
    }

    .cta {
        position: relative;
        margin: auto;
        padding: 19px 22px;
        transition: all 0.2s ease;
    }

        .cta:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            display: block;
            border-radius: 28px;
            background: #0a87bf;
            width: 56px;
            height: 56px;
            transition: all 0.3s ease;
        }

        .cta span {
            position: relative;
            font-size: 16px;
            line-height: 18px;
            letter-spacing: 0.25em;
            text-transform: uppercase;
            vertical-align: middle;
            color: #fff;
        }

        .cta svg {
            position: relative;
            top: 0;
            margin-left: 10px;
            fill: none;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke: #111;
            stroke-width: 2;
            transform: translateX(-5px);
            transition: all 0.3s ease;
        }

        .cta:hover:before {
            width: 100%;
            background: #0a87bf;
        }

        .cta:hover svg {
            transform: translateX(0);
        }

        .cta:active {
            transform: scale(0.96);
        }

    #background {
        overflow: hidden;
        opacity: 0.4;
        color: #f3fbbb;
        font-size: 100px;
        position: absolute;
        z-index: 0
    }

    .title-s {
        margin: 0;
        padding: 0;
        text-transform: uppercase;
        position: relative;
        color: #ccc;
    }

    .title-e {
        margin: 0;
        padding: 0;
        text-transform: uppercase;
        position: relative;
        color: #ccc;
    }

    .title-s:before {
        content: "STUDIOS";
        position: absolute;
        color: #0a87bf;
        top: 0;
        left: 0;
        width: 0%;
        overflow: hidden;
        transition: all 0.5s;
    }

    .title-e:before {
        content: "EQUIPMENT";
        position: absolute;
        color: #0a87bf;
        top: 0;
        left: 0;
        width: 0%;
        overflow: hidden;
        transition: all 0.5s;
    }

    .title-s:hover:before {
        width: 100%;
    }

    .title-e:hover:before {
        width: 100%;
    }

    .zoom:hover {
        transform: scale(1.09); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
        transition: all 0.3s;
    }
</style>
