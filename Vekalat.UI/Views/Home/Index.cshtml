<section class="section latest-news-area blog-area blog-grid blog-3-col ptb-30 padding-top-3x padding-bottom-3x">
    <div class="container">
        <h3 class="text-center mb-30 pb-2">Latest Blogs</h3>
        <div class="owl-carousel" data-owl-carousel="{ &quot;nav&quot;: false, &quot;dots&quot;: true, &quot;loop&quot;: false, &quot;autoHeight&quot;: true, &quot;margin&quot;: 30, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1},&quot;630&quot;:{&quot;items&quot;:2},&quot;991&quot;:{&quot;items&quot;:3},&quot;1200&quot;:{&quot;items&quot;:3}} }">
            @if (Model.PagingHandler.Items.Any())
            {
                @foreach (var item in Model.PagingHandler.Items)
                {
                    <div class="widget widget-featured-posts">
                        <div class="entry">
                            <div class="entry-thumb" style="max-width:40px">
                                <a href="#">
                                    <img class="rounded" src="images/blog-images/@item.Imagename" alt="Post">
                                </a>
                            </div>
                            <div class="entry-content">
                                <h4 class="entry-title">
                                    <a href="#">@item.Title</a>
                                </h4><span class="entry-meta">                                
                                @String.Format("{0:dd MMM yyyy}", item.CreationTime)
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>



    </div>
</section>


